<%= form_for [@recipe, @tool] do |f| %>
  <form role="form">  
    <div class="form-group">
      <label for="ingredient-name">Name</label>
      <%= f.text_field :name, class: "form-control", placeholder: "Mortar and Pestle" %><br />
    </div>
    <hr>
    <%= f.submit "Save Tool", :class => "btn btn-default" %>
  </form>
<% end %>

